<div class="author">
    <h1 class="author_heading">Hi I am Aniketh</h1>
    <p class="author_body">Web Developer and Content Creator</p>
</div>

<img src="/img/woman.webp" alt="a person" class="woman-img" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    <ul class="article_ul">

        <% data.forEach(element=> { %>



            <li>
                <a href="/posts/<%=element._id %>">
                    <span>
                        <%= element.title %>
                    </span>
                    <span class="article-list-date">
                        <%= element.createdAt %>
                    </span>
                </a>
            </li>
            <% }); %>
    </ul>

    <% if(nextPage !== null) {%>

    <a href="/?page=<%= nextPage %>" class="pagination">&lt;View Old Posts</a>

    <% } %>
</section>